protocols {
    bgp {
        group {{ bgp.group }} {
            type internal;
            local-address {{ lo0_v6 }};
            family evpn {
                signaling {
                    advertise-srv6-service;
                    accept-srv6-service;
                }
            }
{% for neighbor in bgp.neighbors %}
            neighbor {{ neighbor }};
{% endfor %}
        }
    }
}
routing-options {
    router-id {{ lo0_v4 }};
    autonomous-system {{ bgp.asn }};
}
